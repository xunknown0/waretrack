<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>Product Inventory</title>
  <style>

  </style>
</head>
<body>

<div class="container">
  <div class="header">
    <h1>ðŸ“¦ Product Inventory</h1>
    <button id="openAddModal" class="add-btn">+ Add Product</button>
  </div>

  <% if (products.length === 0) { %>
    <div class="alert-info">
      <span>ðŸ“¦ No products yet. Click <strong>Add Product</strong> to start adding items!</span>
    </div>
  <% } else { %>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>SKU</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price (â‚±)</th>
            <th>Stock</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr 
              data-id="<%= product._id %>"
              data-sku="<%= product.sku %>"
              data-title="<%= product.title %>"
              data-description="<%= product.description %>"
              data-price="<%= product.price %>"
              data-stock="<%= product.stock %>"
            >
              <td><%= product.sku %></td>
              <td><%= product.title %></td>
              <td class="desc"><%= product.description %></td>
              <td>â‚±<%= product.price.toFixed(2) %></td>
              <td class="<%= product.stock <= 0 ? 'out' : product.stock <= 5 ? 'low' : 'in' %>">
                <%= product.stock <= 0 ? 'Out of Stock' : product.stock <= 5 ? 'Low ('+product.stock+')' : 'In Stock ('+product.stock+')' %>
              </td>
              <td class="actions">
                <button class="view-btn" data-id="<%= product._id %>">View</button>
                <button class="edit-btn">Edit</button>
                <button class="delete-btn">Delete</button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="pagination">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
          <span class="page active"><%= i %></span>
        <% } else { %>
          <a href="/products?page=<%= i %>" class="page"><%= i %></a>
        <% } %>
      <% } %>
    </div>
  <% } %>
</div>

<!-- Add Modal -->
<div class="modal" id="addModal">
  <div class="modal-content">
    <span class="close" id="closeAddModal">&times;</span>
    <h2>Add Product</h2>
    <form action="/products" method="POST">
      <label>Title</label>
      <input type="text" name="title" required>
      <label>Description</label>
      <textarea name="description" required></textarea>
      <label>Price (â‚±)</label>
      <input type="number" name="price" step="0.01" required>
      <label>Stock</label>
      <input type="number" name="stock" min="0" required>
      <button type="submit" class="submit-btn">Add Product</button>
    </form>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal" id="editModal">
  <div class="modal-content">
    <span class="close" id="closeEditModal">&times;</span>
    <h2>Edit Product</h2>
    <form id="editForm" method="POST">
      <label>Title</label>
      <input type="text" name="title" id="editTitle" required>
      <label>Description</label>
      <textarea name="description" id="editDescription" required></textarea>
      <label>Price (â‚±)</label>
      <input type="number" name="price" step="0.01" id="editPrice" required>
      <label>Stock</label>
      <input type="number" name="stock" min="0" id="editStock" required>
      <button type="submit" class="submit-btn">Update Product</button>
    </form>
  </div>
</div>

<!-- View Modal -->
<!-- View Modal -->
<div class="modal" id="viewModal" data-id="">
  <div class="modal-content">
    <span class="close" id="closeViewModal">&times;</span>
    <h2>Product Details</h2>
    <p><strong>SKU:</strong> <span id="viewSKU"></span></p>
    <p><strong>Title:</strong> <span id="viewTitle"></span></p>
    <p><strong>Description:</strong> <span id="viewDescription"></span></p>
    <p><strong>Price:</strong> â‚±<span id="viewPrice"></span></p>
    <p><strong>Stock:</strong> <span id="viewStock"></span></p>
    <button class="cancel-btn" id="closeViewBtn">Close</button>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal" id="deleteModal">
  <div class="modal-content">
    <span class="close" id="closeDeleteModal">&times;</span>
    <h2>Confirm Delete</h2>
    <p>Are you sure you want to delete this product?</p>
    <form id="deleteForm" method="POST">
      <button type="submit" class="submit-btn danger-btn">Yes, Delete</button>
      <button type="button" class="cancel-btn" id="cancelDelete">Cancel</button>
    </form>
  </div>
</div>
<script src="/javascripts/app.js"></script>
</body>
</html>
