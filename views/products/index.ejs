<% layout('layouts/boilerplate') -%>

<div class="container-fluid px-4 mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold text-dark"><i class="fa fa-box me-2"></i> Products</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProductModal">
      <i class="fa fa-plus-circle me-1"></i> Add Product
    </button>
  </div>

  <div class="card shadow-sm rounded-3">
    <div class="card-header fw-bold text-secondary bg-white py-2 text-center">
      Product List
    </div>
    <div class="card-body p-0">
      <table class="table table-hover table-striped table-sm align-middle text-center mb-0 small">
        <thead class="table-light fs-7">
          <tr>
            <th>#</th>
            <th>SKU / Barcode</th>
            <th>Name</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (products && products.length) { %>
            <% products.forEach((p, i) => { %>
              <tr>
                <th scope="row"><%= i + 1 + (currentPage - 1) * 5 %></th>
                <td><%= p.sku || '—' %></td>
                <td><%= p.title %></td>
                <td><%= p.category || 'N/A' %></td>
                <td><%= p.stock ?? 0 %></td>
                <td>₱<%= p.price.toLocaleString() %></td>
                <td class="fw-bold <%= p.stock <= 0 ? 'text-danger' : p.stock <= 5 ? 'text-warning' : 'text-success' %>">
                  <%= p.stock <= 0 ? 'Out of Stock' : p.stock <= 5 ? 'Critical' : 'In Stock' %>
                </td>
                <td>
                  <!-- View Button -->
                  <button class="btn btn-sm btn-info py-0 px-1 me-1" data-bs-toggle="modal" data-bs-target="#viewProductModal<%= p._id %>">
                    <i class="fa fa-eye"></i>
                  </button>
                  <!-- Edit Button -->
                  <a href="/products/<%= p._id %>/edit" class="btn btn-sm btn-primary py-0 px-1 me-1">
                    <i class="fa fa-pencil-alt"></i>
                  </a>
                  <!-- Delete Button -->
                  <form action="/products/<%= p._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-danger py-0 px-1" onclick="return confirm('Delete this product?')">
                      <i class="fa fa-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>

              <!-- View Modal -->
              <div class="modal fade" id="viewProductModal<%= p._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-md modal-dialog-centered">
                  <div class="modal-content rounded-4">
                    <div class="modal-header">
                      <h5 class="modal-title"><i class="fa fa-box me-2"></i> <%= p.title %></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <p><strong>SKU / Barcode:</strong> <%= p.sku || '—' %></p>
                      <p><strong>Category:</strong> <%= p.category || 'N/A' %></p>
                      <p><strong>Stock:</strong> <%= p.stock ?? 0 %></p>
                      <p><strong>Price:</strong> ₱<%= p.price.toLocaleString() %></p>
                      <p><strong>Description:</strong> <%= p.description || '-' %></p>
                      <% if (p.image) { %>
                        <img src="/uploads/<%= p.image %>" alt="<%= p.title %>" class="img-fluid mt-2 rounded">
                      <% } %>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>

            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="8" class="text-center text-muted small">No products found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="card-footer bg-white d-flex justify-content-center py-2">
      <nav>
        <ul class="pagination pagination-sm mb-0">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
            </li>
          <% } else { %>
            <li class="page-item disabled"><span class="page-link">&raquo;</span></li>
          <% } %>
        </ul>
      </nav>
    </div>
  </div>
</div>

<%- include('../partials/modals/productModal') %>
