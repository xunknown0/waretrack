<div class="container-fluid px-4 mt-4">
    <h2 class="fw-bold mb-4">Dashboard</h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center p-3">
                <h5>Total Products</h5>
                <h3><%= totalProducts %></h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <h5>Total Sales</h5>
                <h3><%= totalSales %></h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3">
                <h5>Total Stock</h5>
                <h3><%= totalStock %></h3>
            </div>
        </div>
    </div>

    <!-- Products Table -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>SKU</th>
                    <th>Product Name</th>
                    <th>Stock</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.sku %></td>
                        <td><%= product.name %></td>
                        <td><%= product.stock %></td>
                        <td><%= product.price %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
