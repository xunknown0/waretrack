<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content rounded-4 small" style="font-size:0.85rem;">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fa fa-plus-circle me-2"></i> Add New Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/products" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-2">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control form-control-sm" placeholder="Product Name" required>
          </div>
          <div class="mb-2">
            <label class="form-label">Category</label>
            <input type="text" name="category" class="form-control form-control-sm" placeholder="Category">
          </div>
          <div class="mb-2">
            <label class="form-label">Stock</label>
            <input type="number" name="stock" class="form-control form-control-sm" min="0" value="0">
          </div>
          <div class="mb-2">
            <label class="form-label">Price</label>
            <input type="number" name="price" class="form-control form-control-sm" min="0" step="0.01" value="0.00">
          </div>
          <div class="mb-2">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control form-control-sm" rows="2" placeholder="Description"></textarea>
          </div>
          <div class="mb-2">
            <label class="form-label">Image</label>
            <input type="file" name="image" class="form-control form-control-sm" accept="image/*" onchange="previewAddImage(event)">
          </div>
          <img id="addImagePreview" class="img-fluid rounded mt-2" style="max-height:150px; display:none;">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-sm btn-primary">Add Product</button>
        </div>
      </form>
    </div>
  </div>
</div>

