<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content rounded-3 border-0">
      <div class="modal-header bg-secondary text-white rounded-top-3 px-4 py-3">
        <h5 class="modal-title fw-bold fs-5">
          <i class="fa fa-boxes-stacked me-2"></i> Add New Inventory Item
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <form action="/products" method="POST" enctype="multipart/form-data">
        <div class="modal-body p-4">
          <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
            <div class="col">
              <label for="productTitle" class="form-label fw-semibold mb-1">
                Product Title <span class="text-danger">*</span>
              </label>
              <input
                type="text"
                id="productTitle"
                name="title"
                class="form-control rounded-2"
                placeholder="e.g., Ergonomic Office Chair"
                required
              />
            </div>

            <div class="col">
               <label for="productTitle" class="form-label fw-semibold mb-1">
                Categories <span class="text-danger">*</span>
              </label>
              <select name="category" class="form-control rounded-2">
                <option value="">-- Select Category --</option>
                <% function renderDropdown(cats, prefix='') { %> <%
                cats.forEach(cat => { %>
                <option value="<%= cat._id %>"><%= prefix + cat.name %></option>
                <% if (cat.children && cat.children.length > 0) { %> <%=
                renderDropdown(cat.children, prefix + '-- ') %> <% } %> <% }) %>
                <% } %> <%= renderDropdown(categories) %>
              </select>
            </div>

            <div class="col">
              <label for="productStock" class="form-label fw-semibold mb-1"
                >Stock Quantity</label
              >
              <input
                type="number"
                id="productStock"
                name="stock"
                class="form-control rounded-2"
                min="0"
                value="0"
                step="1"
              />
            </div>

            <div class="col">
              <label for="productPrice" class="form-label fw-semibold mb-1">
                Price <span class="text-danger">*</span>
              </label>
              <div class="input-group rounded-2">
                <span class="input-group-text bg-light text-muted fw-bold"
                  >â‚±</span
                >
                <input
                  type="number"
                  id="productPrice"
                  name="price"
                  class="form-control"
                  min="0"
                  step="0.01"
                  value="0.00"
                  required
                />
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label for="productDescription" class="form-label fw-semibold mb-1">
              Description <span class="text-danger">*</span>
            </label>
            <textarea
              id="productDescription"
              name="description"
              class="form-control rounded-2"
              rows="3"
              placeholder="A detailed description of the product features and benefits."
              required
            ></textarea>
          </div>

          <div class="mb-3">
            <label for="productImage" class="form-label fw-semibold mb-1"
              >Product Image</label
            >
            <input
              type="file"
              id="productImage"
              name="image"
              class="form-control rounded-2"
              accept="image/*"
              onchange="previewAddImage(event)"
            />
            <small class="form-text text-muted mt-1 d-block"
              >Upload a clear image of your product (JPG, PNG, GIF).</small
            >
          </div>

          <div class="text-center">
            <img
              id="addImagePreview"
              class="img-fluid rounded-3 border mt-3"
              style="
                max-height: 200px;
                display: none;
                object-fit: cover;
                width: auto;
              "
              alt="Image Preview"
            />
          </div>
        </div>

        <div
          class="modal-footer d-flex justify-content-between px-4 py-3 bg-light border-top rounded-bottom-3"
        >
          <button
            type="button"
            class="btn btn-outline-secondary px-4"
            data-bs-dismiss="modal"
          >
            <i class="fa fa-times me-2"></i> Cancel
          </button>
          <button type="submit" class="btn btn-secondary px-4">
            <i class="fa fa-save me-2"></i> Save Product
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function previewAddImage(event) {
    const output = document.getElementById("addImagePreview");
    output.src = URL.createObjectURL(event.target.files[0]);
    output.style.display = "block";
  }
</script>
